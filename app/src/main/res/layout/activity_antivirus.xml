<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.linxinzhe.android.xinzhesecurity.AntivirusActivity">

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/security_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="#22ffffff"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp">
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/tv_scan_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击开始扫描"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_kill_virus"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="杀毒"/>

    <TextView
        android:id="@+id/tv_scanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在扫描：" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_scanning_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

</LinearLayout>
